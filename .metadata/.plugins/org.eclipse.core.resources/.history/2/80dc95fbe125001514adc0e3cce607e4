import eduni.simjava.*;
public class Source extends Sim_entity{
	private Sim_port out;
	private double delay;
	
	public Source(String name){
		super(name);
		out = new Sim_port("Out");
		add_port(out);
	}
	public void body(){
		for(int i=0;i<100;i++){
			//send the process a job
			sim_schedule(out,0.0,0);
			//pause
			sim_pause(delay);
		}
	}
}
